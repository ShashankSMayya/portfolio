---
import SideBarFooter from "./SideBarFooter.astro";
import { Image } from "astro:assets";
import SideBarMenu from "./SideBarMenu.astro";
const { sideBarActiveItemID } = Astro.props;
---

<div class="drawer-side z-40">
  <label for="my-drawer" class="drawer-overlay"></label>
  <aside class="premium-sidebar relative h-auto min-h-full w-[19rem] bg-gradient-to-br from-base-100 via-base-200/80 to-base-300/60 backdrop-blur-md border-r border-base-content/10 text-base-content flex flex-col overflow-hidden">
    <!-- Premium background effects -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-secondary/5 pointer-events-none"></div>
    <div class="absolute top-20 right-0 w-32 h-32 bg-gradient-to-l from-primary/10 to-transparent rounded-full blur-2xl opacity-50 animate-float-slow"></div>
    <div class="absolute bottom-40 left-0 w-40 h-40 bg-gradient-to-r from-secondary/8 to-transparent rounded-full blur-3xl opacity-40 animate-float-medium"></div>
    
    <!-- Content -->
    <div class="relative z-10 flex flex-col h-full">
      <!-- Profile Section -->
      <div class="px-6 pt-8 pb-6">
        <a href="/" class="block group">
          <div class="premium-avatar relative w-fit mx-auto mb-4">
            <!-- Animated ring -->
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-primary via-secondary to-accent opacity-20 group-hover:opacity-40 transition-opacity duration-500 animate-spin-slow"></div>
            <div class="absolute inset-1 rounded-full bg-gradient-to-r from-accent via-primary to-secondary opacity-30 group-hover:opacity-50 transition-opacity duration-500 animate-spin-slow-reverse"></div>
            
            <!-- Avatar -->
            <div class="relative">
              <div class="w-24 h-24 rounded-full overflow-hidden ring-4 ring-primary/20 group-hover:ring-primary/40 transition-all duration-500 group-hover:scale-105">
                <Image 
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" 
                  format="webp" 
                  width={200} 
                  height={200} 
                  src="/profile.webp" 
                  alt="Profile image" 
                />
              </div>
              <!-- Status indicator -->
              <div class="absolute bottom-1 right-1 w-6 h-6 bg-gradient-to-r from-green-400 to-green-500 rounded-full ring-2 ring-base-100 flex items-center justify-center">
                <div class="w-2 h-2 bg-white rounded-full animate-pulse"></div>
              </div>
            </div>
          </div>
          
          <!-- Name and title -->
          <div class="text-center">
            <h2 class="text-lg font-bold text-base-content group-hover:text-primary transition-colors duration-300">
              Shashank S Mayya
            </h2>
            <p class="text-sm text-base-content/70 font-medium">
              Flutter Developer
            </p>
            <div class="mt-2 inline-flex items-center px-3 py-1 rounded-full bg-primary/10 border border-primary/20 text-primary text-xs font-medium">
              <span class="w-1.5 h-1.5 bg-primary rounded-full mr-2 animate-pulse"></span>
              Available for Work
            </div>
          </div>
        </a>
      </div>
      
      <!-- Divider -->
      <div class="px-6 mb-2">
        <div class="h-px bg-gradient-to-r from-transparent via-base-content/20 to-transparent"></div>
      </div>
      
      <!-- Menu -->
      <div class="flex-1 px-3">
        <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
      </div>
      
      <!-- Footer -->
      <SideBarFooter />
    </div>
  </aside>
</div>

<style>
  .premium-sidebar {
    box-shadow: 
      0 0 0 1px rgba(var(--bc), 0.05),
      0 10px 30px -5px rgba(0, 0, 0, 0.1),
      0 0 50px rgba(var(--p), 0.1);
  }
  
  .premium-avatar::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 50%;
    background: linear-gradient(45deg, 
      rgba(var(--p), 0.3), 
      rgba(var(--s), 0.3), 
      rgba(var(--a), 0.3)
    );
    z-index: -1;
    opacity: 0;
    transition: opacity 0.5s ease;
  }
  
  .premium-avatar:hover::before {
    opacity: 1;
  }
  
  @keyframes spin-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes spin-slow-reverse {
    from { transform: rotate(360deg); }
    to { transform: rotate(0deg); }
  }
  
  .animate-spin-slow {
    animation: spin-slow 20s linear infinite;
  }
  
  .animate-spin-slow-reverse {
    animation: spin-slow-reverse 25s linear infinite;
  }
</style>