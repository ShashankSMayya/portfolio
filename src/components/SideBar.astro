---
import SideBarFooter from "./SideBarFooter.astro";
import { Image } from "astro:assets";
import SideBarMenu from "./SideBarMenu.astro";
const { sideBarActiveItemID } = Astro.props;
---

<div class="drawer-side z-40">
  <label for="my-drawer" class="drawer-overlay"></label>
  <aside class="h-auto min-h-full w-[19rem] bg-base-200 border-r border-base-content/10 text-base-content flex flex-col">
    <!-- Profile Section -->
    <div class="px-6 pt-8 pb-6">
      <a href="/" class="block group">
        <div class="relative w-fit mx-auto mb-4">
          <!-- Avatar -->
          <div class="w-24 h-24 rounded-full overflow-hidden ring-2 ring-base-content/10 group-hover:ring-primary/50 transition-all duration-300">
            <Image 
              class="w-full h-full object-cover" 
              format="webp" 
              width={200} 
              height={200} 
              src="/profile.webp" 
              alt="Profile image" 
            />
          </div>
          <!-- Status indicator -->
          <div class="absolute bottom-0 right-0 w-5 h-5 bg-green-500 rounded-full ring-2 ring-base-200"></div>
        </div>
        
        <!-- Name and title -->
        <div class="text-center">
          <h2 class="text-lg font-semibold text-base-content group-hover:text-primary transition-colors duration-200">
            Shashank S Mayya
          </h2>
          <p class="text-sm text-base-content/60">
            Flutter Developer
          </p>
          <div class="mt-3 inline-flex items-center px-3 py-1 rounded-full bg-primary/10 text-primary text-xs font-medium">
            <span class="w-1.5 h-1.5 bg-primary rounded-full mr-1.5 animate-pulse"></span>
            Available
          </div>
        </div>
      </a>
    </div>
    
    <!-- Divider -->
    <div class="px-6">
      <div class="h-px bg-base-content/10"></div>
    </div>
    
    <!-- Menu -->
    <div class="flex-1 px-3 py-4">
      <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
    </div>
    
    <!-- Footer -->
    <SideBarFooter />
  </aside>
</div>

<style>
  aside {
    box-shadow: 
      0 0 0 1px rgba(0, 0, 0, 0.05),
      0 1px 2px 0 rgba(0, 0, 0, 0.05);
  }
</style>