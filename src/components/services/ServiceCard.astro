---
const { title, icon, desc, features, badge, highlighted = false } = Astro.props;
import { Image } from "astro:assets";
---

<div class={`service-card group relative rounded-lg ${highlighted ? 'bg-primary/5 ring-2 ring-primary/20' : 'bg-base-100'} border ${highlighted ? 'border-primary/30' : 'border-base-content/10'} hover:border-primary/30 transition-all duration-300 hover:shadow-lg overflow-hidden h-full flex flex-col`}>
    <!-- Badge if highlighted -->
    {highlighted && (
        <div class="absolute top-0 right-0 bg-primary text-primary-content text-xs font-bold px-3 py-1 rounded-bl-lg">
            POPULAR
        </div>
    )}
    
    <div class="p-6 flex flex-col flex-1">
        <!-- Icon and Title -->
        <div class="flex items-start mb-4">
            <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <div class="text-primary text-2xl">
                    {icon}
                </div>
            </div>
            <div class="ml-4 flex-1">
                <h3 class="text-xl font-bold text-base-content">
                    {title}
                </h3>
                {badge && (
                    <span class="inline-flex items-center mt-1 px-2 py-0.5 rounded text-xs font-medium bg-secondary/10 text-secondary">
                        {badge}
                    </span>
                )}
            </div>
        </div>
        
        <!-- Description -->
        <p class="text-base-content/70 mb-4">
            {desc}
        </p>
        
        <!-- Features -->
        {features && features.length > 0 && (
            <div class="flex-1">
                <h4 class="text-sm font-semibold text-base-content/60 uppercase tracking-wider mb-2">Includes</h4>
                <ul class="space-y-2">
                    {features.map((feature) => (
                        <li class="flex items-start">
                            <svg class="w-4 h-4 text-primary mt-0.5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-sm text-base-content/70">{feature}</span>
                        </li>
                    ))}
                </ul>
            </div>
        )}
        
        <!-- Call to Action -->
        <div class="mt-6 pt-4 border-t border-base-content/10">
            <a href={`mailto:shashanksmayya@gmail.com?subject=Inquiry about ${encodeURIComponent(title)}&body=Hi Shashank,%0D%0A%0D%0AI'm interested in your ${encodeURIComponent(title)} service. Could we discuss my project requirements?%0D%0A%0D%0AThanks!`} class="w-full btn btn-primary btn-sm">
                Get Started
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
            </a>
        </div>
    </div>
</div>