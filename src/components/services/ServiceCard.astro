---
const { title, icon, desc, features, badge, highlighted = false } = Astro.props;
import { Image } from "astro:assets";
---

<div class={`service-card group relative rounded-2xl ${highlighted ? 'bg-gradient-to-br from-primary/10 via-secondary/10 to-accent/10 ring-2 ring-primary/20' : 'bg-gradient-to-br from-base-100 to-base-200/50'} border ${highlighted ? 'border-primary/30' : 'border-base-content/10'} hover:border-primary/30 transition-all duration-700 hover:shadow-2xl hover:shadow-primary/10 hover:scale-[1.02] hover:-translate-y-2 overflow-hidden h-full flex flex-col`}>
    <!-- Background gradient overlay on hover -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-secondary/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
    
    <!-- Badge if highlighted -->
    {highlighted && (
        <div class="absolute top-0 right-0 bg-gradient-to-r from-primary to-secondary text-white text-sm font-bold px-4 py-1 rounded-bl-xl">
            MOST POPULAR
        </div>
    )}
    
    <div class="relative p-8 flex flex-col flex-1">
        <!-- Icon and Title -->
        <div class="flex items-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-primary/20 to-secondary/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-500">
                <div class="text-primary text-3xl">
                    {icon}
                </div>
            </div>
            <div class="ml-4 flex-1">
                <h3 class="text-2xl font-bold text-base-content group-hover:text-primary transition-colors duration-300">
                    {title}
                </h3>
                {badge && (
                    <span class="inline-flex items-center mt-2 px-3 py-1 rounded-full text-xs font-medium bg-primary/10 text-primary border border-primary/20">
                        {badge}
                    </span>
                )}
            </div>
        </div>
        
        <!-- Description -->
        <p class="text-base-content/70 leading-relaxed mb-6 group-hover:text-base-content/90 transition-colors duration-300">
            {desc}
        </p>
        
        <!-- Features -->
        {features && features.length > 0 && (
            <div class="flex-1">
                <h4 class="text-sm font-semibold text-base-content/60 uppercase tracking-wider mb-3">What's Included</h4>
                <ul class="space-y-3">
                    {features.map((feature) => (
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-primary mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-sm text-base-content/70 group-hover:text-base-content/80 transition-colors duration-300">{feature}</span>
                        </li>
                    ))}
                </ul>
            </div>
        )}
        
        <!-- Call to Action -->
        <div class="mt-8 pt-6 border-t border-base-content/10">
            <a href={`mailto:shashanksmayya@gmail.com?subject=Inquiry about ${encodeURIComponent(title)}&body=Hi Shashank,%0D%0A%0D%0AI'm interested in your ${encodeURIComponent(title)} service. Could we discuss my project requirements?%0D%0A%0D%0AThanks!`} class="w-full btn btn-primary rounded-full shadow-lg hover:shadow-primary/30 transition-all duration-300 hover:scale-105 group/btn inline-flex items-center justify-center">
                <span class="mr-2 font-semibold">Get Started</span>
                <svg class="w-4 h-4 transition-transform group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                </svg>
            </a>
        </div>
    </div>
    
    <!-- Subtle animated border gradient -->
    <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none">
        <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-primary/20 via-secondary/20 to-accent/20 blur-sm"></div>
    </div>
</div>

<style>
    .service-card {
        backdrop-filter: blur(10px);
    }
</style>