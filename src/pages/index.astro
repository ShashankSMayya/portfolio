---
import BaseLayout from "../layouts/BaseLayout.astro";
import {getCollection} from "astro:content";
import ProjectCard from "../components/projects/ProjectCard.astro";
import ProjectDialog from "../components/projects/ProjectDialog.astro";
import TechStackMarquee from "../components/TechStackMarquee.astro";
import { getRecentProjects } from "../data/projects";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const last_posts = posts.slice(0, 3);
const recentProjects = getRecentProjects(3);
---

<BaseLayout 
  sideBarActiveItemID="home"
  title="Shashank S Mayya | Expert Flutter Developer & Mobile App Freelancer"
  description="Professional Flutter developer with 5+ years experience in fintech, trading apps & enterprise solutions. 10+ apps delivered. Available for freelance projects worldwide."
>
    <!-- Hero Section - Clean and Professional -->
    <section class="relative min-h-[90vh] flex items-center justify-center" aria-label="Hero section">
        <!-- Subtle Background Pattern -->
        <div class="absolute inset-0 bg-gradient-to-br from-base-200/50 via-base-100 to-base-200/30"></div>
        <div class="absolute inset-0">
            <div class="absolute top-0 right-0 w-96 h-96 bg-primary/5 rounded-full blur-3xl"></div>
            <div class="absolute bottom-0 left-0 w-96 h-96 bg-secondary/5 rounded-full blur-3xl"></div>
        </div>
        
        <!-- Main Content -->
        <div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
            <!-- Status Badge -->
            <div class="mb-8 animate-fade-in">
                <span class="inline-flex items-center px-4 py-2 rounded-full bg-primary/10 border border-primary/20 text-primary text-sm font-medium">
                    <span class="w-2 h-2 bg-primary rounded-full mr-2 animate-pulse"></span>
                    Available for Projects
                </span>
            </div>
            
            <!-- Main Heading -->
            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-4 sm:mb-6 animate-fade-up">
                <span class="text-base-content">Hi, I'm</span>
                <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent"> Shashank</span>
            </h1>
            
            <!-- Professional Title -->
            <p class="text-lg sm:text-xl md:text-2xl text-base-content/80 mb-6 sm:mb-8 font-light animate-fade-up" style="animation-delay: 0.1s;">
                Flutter Developer & Mobile App Specialist
            </p>
            
            <!-- Value Proposition -->
            <p class="text-base sm:text-lg text-base-content/60 max-w-2xl mx-auto mb-8 sm:mb-12 leading-relaxed animate-fade-up px-4 sm:px-0" style="animation-delay: 0.2s;">
                I create high-performance mobile applications that solve real business problems. 
                Specializing in enterprise Flutter development with a focus on clean architecture and exceptional user experience.
            </p>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center animate-fade-up" style="animation-delay: 0.3s;">
                <a href="/projects" class="btn btn-primary btn-md sm:btn-lg px-6 sm:px-8 shadow-lg hover:shadow-xl transition-all duration-300 w-full sm:w-auto max-w-xs">
                    View My Work
                    <svg class="w-4 sm:w-5 h-4 sm:h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
                
                <a href="mailto:shashanksmayya@gmail.com" class="btn btn-outline btn-md sm:btn-lg px-6 sm:px-8 hover:shadow-lg transition-all duration-300 w-full sm:w-auto max-w-xs">
                    Get In Touch
                </a>
            </div>
            
            <!-- Quick Stats -->
            <div class="grid grid-cols-3 gap-4 sm:gap-8 max-w-lg mx-auto mt-12 sm:mt-20 animate-fade-up" style="animation-delay: 0.4s;">
                <div class="text-center">
                    <div class="text-2xl sm:text-3xl font-bold text-primary mb-1">5+</div>
                    <div class="text-xs sm:text-sm text-base-content/60">Years Experience</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl sm:text-3xl font-bold text-secondary mb-1">10+</div>
                    <div class="text-xs sm:text-sm text-base-content/60">Apps Delivered</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl sm:text-3xl font-bold text-accent mb-1">100%</div>
                    <div class="text-xs sm:text-sm text-base-content/60">Client Satisfaction</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-base-200/50" aria-label="Services">
        <div class="max-w-6xl mx-auto px-6">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">What I Do</h2>
                <p class="text-lg text-base-content/60 max-w-2xl mx-auto">
                    Comprehensive Flutter development services for businesses of all sizes
                </p>
            </div>
            
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
                <!-- Service Card 1 -->
                <div class="card bg-base-100 shadow-soft hover:shadow-lg transition-all duration-300 group">
                    <div class="card-body">
                        <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary/20 transition-colors">
                            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold mb-2">Mobile Development</h3>
                        <p class="text-base-content/60">
                            Native-quality Flutter apps for iOS and Android with optimal performance
                        </p>
                    </div>
                </div>
                
                <!-- Service Card 2 -->
                <div class="card bg-base-100 shadow-soft hover:shadow-lg transition-all duration-300 group">
                    <div class="card-body">
                        <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center mb-4 group-hover:bg-secondary/20 transition-colors">
                            <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold mb-2">Enterprise Solutions</h3>
                        <p class="text-base-content/60">
                            Scalable applications with complex business logic and integrations
                        </p>
                    </div>
                </div>
                
                <!-- Service Card 3 -->
                <div class="card bg-base-100 shadow-soft hover:shadow-lg transition-all duration-300 group">
                    <div class="card-body">
                        <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4 group-hover:bg-accent/20 transition-colors">
                            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold mb-2">UI/UX Excellence</h3>
                        <p class="text-base-content/60">
                            Beautiful, intuitive interfaces that users love to interact with
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Technology Stack -->
    <section class="py-16 bg-base-100" aria-label="Technology stack">
        <TechStackMarquee />
    </section>

    <!-- Featured Projects Section -->
    <section class="py-20 bg-base-200/50" aria-label="Featured projects">
        <div class="max-w-6xl mx-auto px-6">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">Recent Projects</h2>
                <p class="text-lg text-base-content/60 max-w-2xl mx-auto">
                    A selection of my recent work in mobile app development
                </p>
            </div>
            
            <div class="space-y-6">
                {recentProjects.map((project, index) => (
                    <div class="animate-fade-up" style={`animation-delay: ${index * 0.1}s`}>
                        <ProjectCard project={project} />
                    </div>
                ))}
            </div>
            
            <div class="text-center mt-12">
                <a href="/projects" class="btn btn-primary btn-lg shadow-lg hover:shadow-xl transition-all duration-300">
                    View All Projects
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="py-20 bg-gradient-to-br from-primary/10 via-base-100 to-secondary/10" aria-label="Call to action">
        <div class="max-w-4xl mx-auto px-6 text-center">
            <h2 class="text-3xl md:text-5xl font-bold mb-6">
                Let's Build Something Great Together
            </h2>
            
            <p class="text-lg md:text-xl text-base-content/70 mb-10">
                Ready to turn your idea into reality? I'm here to help you create exceptional mobile experiences.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a href="mailto:shashanksmayya@gmail.com" class="btn btn-primary btn-lg px-8 shadow-lg hover:shadow-xl transition-all duration-300">
                    Start a Project
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </a>
                
                <a href="https://cal.com/shashank" target="_blank" class="btn btn-outline btn-lg px-8 hover:shadow-lg transition-all duration-300">
                    Schedule a Call
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <ProjectDialog />
</BaseLayout>